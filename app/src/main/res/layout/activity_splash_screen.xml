<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context=".SplashScreenActivity">


    <ImageView
        android:id="@+id/splash_logo"
        android:layout_width="112dp"
        android:layout_height="117dp"
        android:src="@drawable/xo"
        android:outlineAmbientShadowColor="@color/light_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <ImageView
        android:id="@+id/cross_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/cross"
        app:layout_constraintTop_toBottomOf="@id/splash_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/zero_image"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"/>


    <ImageView
        android:id="@+id/zero_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/zero"
        app:layout_constraintTop_toBottomOf="@id/splash_logo"
        app:layout_constraintStart_toEndOf="@id/cross_image"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"/>


    <TextView
        android:id="@+id/starting_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="216dp"
        android:text="starting................."
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cross_image" />

</androidx.constraintlayout.widget.ConstraintLayout>
